<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                @*<span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>*@
            </button>
            <a class="navbar-brand" href="/">Administration Support System</a>

            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    @if (Session["EmployeeId"] != null && (Session["Credential"].ToString() == "HRSup" || Session["Credential"].ToString() == "RegSup"))
                    {
                        <li class="nav-item">@Html.ActionLink("Employee Directory", "SearchEmployee", "Employee", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Modify Department", "Modify", "Department", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Team Reviews", "Index", "Review", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Personal Reviews", "PersonalReviews", "Review", null, new { @class = "nav-link" })</li>
                    }
                    @if (Session["EmployeeId"] != null && (Session["Credential"].ToString() == "HREmp" || Session["Credential"].ToString() == "RegEmp"))
                    {
                        <li class="nav-item">@Html.ActionLink("Employee Directory", "SearchEmployee", "Employee", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Personal Reviews", "PersonalReviews", "Review", null, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - System King Ltd.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
