@model IEnumerable<Web.AdminSupportSystem.Models.PersonalReviewVM>

@{
    ViewBag.Title = "PersonalReviews";
}

<div class="display-4 text-center">Personal Reviews</div>

<p class=" text-center">Welcome @Session["Name"]!</p>


<hr />
@if (Model.Count() != 0)
{
<div class="container-fluid">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark text-center" style="overflow: hidden; white-space: nowrap;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SupervisorName)
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody class="text-center">
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupervisorName)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "PersonalReviewDetails", new { id = item.Id })
                    </td>
                </tr>

            </tbody>
        }
    </table>
</div>
}
else
{
    <p class="text-center">You have no performance reviews on record. Please contact your supervisor for more information.</p>
}
